<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.magnus.laesomondo.MainMenuUser">

    <TextView
        style="@style/defaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mainMenuUserLoggedInTitle"
        android:id="@+id/mainMenuUserLoggedInTitle"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        style="@style/defaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainMenuUserLoggedInReadingTestButton"
        android:id="@+id/mainMenuUserLoggedInReadingTestButton"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/mainMenuUserLoggedInTitle"
        android:layout_centerHorizontal="true"
        android:onClick="onLaesetest"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainMenuUserLoggedInReadingTestButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="106dp"
        android:weightSum="1"
        android:gravity="center">

        <Button
            style="@style/defaultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainMenuUserLoggedInMyProfile"
            android:id="@+id/mainMenuUserLoggedInMyProfile"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:onClick="onMyProfile"/>

        <Button
            style="@style/defaultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainMenuUserLoggedInLogOut"
            android:id="@+id/mainMenuUserLoggedInLogOut"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:onClick="onLogOut" />
    </LinearLayout>
</RelativeLayout>
