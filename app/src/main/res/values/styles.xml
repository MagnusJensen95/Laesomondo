<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CustomPopUpTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>



    <style name="graphText">
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">#d0df47</item>
        <item name="android:textStyle"> bold|italic</item>

    </style>

    <style name="usernameText">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle"> bold|</item>
        <item name="android:textColor">#b63539</item>

    </style>

    <style name="seekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorAccent">#ffae00</item>
    </style>


</resources>
