<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CustomPopUpTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="graphText">
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">#d0df47</item>
        <item name="android:textStyle"> bold|italic</item>
    </style>

    <style name="defaultText">
        <item name="android:textSize">25dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle"> bold</item>
    </style>

    <style name="defaultButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="usernameText">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle"> bold|</item>
        <item name="android:textColor">#b63539</item>
    </style>

    <style name="seekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorAccent">#ffae00</item>
    </style>



</resources>
